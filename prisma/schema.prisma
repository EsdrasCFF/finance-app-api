generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(uuid())
  first_name String
  last_name  String
  email      String
  password   String

  Transactions Transaction[]

  @@map("users")
}

enum TRANSACTION_TYPE {
  INCOME
  EXPENSE
  INVESTMENT
}

model Transaction {
  id          String           @id @default(uuid())
  user_id     String
  user        User             @relation(fields: [user_id], references: [id], onDelete: Cascade)
  name        String
  description String?
  date        DateTime
  amount      Int
  type        TRANSACTION_TYPE
}
